@using System.Web;
@model eShopSolution.ViewModels.Catalog.Products.ProductVM;

@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid px-4">
    <h1 class="mt-4">Chi tiết</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item"><a href="/product">Danh sách sản phẩm</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                     Tên sản phẩm
                </dt>
                <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    Giá bán
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Price)
                </dd>
                <dt class="col-sm-2">
                    Giá gốc
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.OriginalPrice)
                </dd>
                <dt class="col-sm-2">
                    Số lượng
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Stock)
                </dd>
                <dt class="col-sm-2">
                    Số sao
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Rating)
                </dd>
                <dt class="col-sm-2">
                    Lượt xem
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ViewCount)
                </dd>
                <dt class="col-sm-2">
                    Thời gian tạo
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.DateCreated)
                </dd>
                <dt class="col-sm-2">
                    Mô tả
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Description)
                </dd>
                <dt class="col-sm-2">
                    Chi tiết
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Details)
                </dd>
                <dt class="col-sm-2">
                    Ngôn ngữ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.LanguageId)
                </dd>
                <dt class="col-sm-2">
                    Xuất xứ
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Origin)
                </dd>
                <dt class="col-sm-2">
                    Thời gian bảo hành
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Warranty)
                </dd>
                <dt class="col-sm-2">
                    Thương hiệu
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Brand.Name)
                </dd>
                <dt class="col-sm-2">
                    Sản phẩm nổi bật
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.IsFeatured)
                </dd>
                <dt class="col-sm-2">
                    Tiêu đề SEO
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SeoTitle)
                </dd>
                <dt class="col-sm-2">
                    Đường dẫn SEO
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SeoAlias)
                </dd>
                <dt class="col-sm-2">
                    Mô tả SEO
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.SeoDescription)
                </dd>
            </dl>
        </div>
    </div>
</div>
</div>
