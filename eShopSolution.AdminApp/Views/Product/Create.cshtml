@model eShopSolution.ViewModels.Catalog.Products.ProductCreateRequest

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <style>
        .ck-editor__editable {
            min-height: 300px;
        }
    </style>
}

@section Scripts {
    <script src="https://cdn.ckeditor.com/ckeditor5/36.0.1/classic/ckeditor.js"></script>
    <script>
        function createClassicEditor(elementId) {
            ClassicEditor
                .create(document.querySelector(`#${elementId}`), {
                    // toolbar: [ 'heading', '|', 'bold', 'italic', 'link' ]
                })
                .then(editor => {
                    window.editor = editor;
                    editor.ui.view.editable.element.style.height = '300px';
                })
                .catch(err => {
                    console.error(err.stack);
                });
        }

        createClassicEditor('txt_details');
        createClassicEditor('txt_description');

    </script>
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Tạo mới sản phẩm</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Tạo mới sản phẩm</li>
    </ol>
    <div class="card mb-4">
        <div class="card-body">
            <div class="table-responsive col-md-8">
                <form asp-action="Create" enctype="multipart/form-data" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mt-3">
                        <label asp-for="Name" class="control-label mb-2">Tên sản phẩm</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Price" class="control-label mb-2">Giá bán</label>
                        <input asp-for="Price" type="number" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="OriginalPrice" class="control-label mb-2">Giá gốc</label>
                        <input asp-for="OriginalPrice" type="number" class="form-control" />
                        <span asp-validation-for="OriginalPrice" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Stock" class="control-label mb-2">Số lượng</label>
                        <input asp-for="Stock" type="number" class="form-control" />
                        <span asp-validation-for="Stock" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Description" class="control-label mb-2">Mô tả</label>
                        <textarea id="txt_description" asp-for="Description" rows="8" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="Details" class="control-label mb-2">Chi tiết</label>
                        <textarea id="txt_details" asp-for="Details" rows="4" class="form-control"></textarea>
                        <span asp-validation-for="Details" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="SeoDescription" class="control-label mb-2">Mô tả SEO</label>
                        <input asp-for="SeoDescription" class="form-control" />
                        <span asp-validation-for="SeoDescription" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="SeoTitle" class="control-label mb-2">Tiêu đề SEO</label>
                        <input asp-for="SeoTitle" class="form-control" />
                        <span asp-validation-for="SeoTitle" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="SeoAlias" class="control-label mb-2">Đường dẫn SEO</label>
                        <input asp-for="SeoAlias" class="form-control" />
                        <span asp-validation-for="SeoAlias" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="CategoryId" class="control-label mb-2">Danh mục</label>
                        <select asp-for="CategoryId" class="form-control">
                            <option>Chọn doanh mục</option>
                            @foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        </select>
                        <span asp-validation-for="CategoryId" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <label asp-for="ThumbnailImage" class="control-label mb-2">Hình ảnh</label>
                        <input asp-for="ThumbnailImage" type="file" class="form-control" accept=".jpg, .png" />
                        <span asp-validation-for="ThumbnailImage" class="text-danger"></span>
                    </div>
                    <div class="form-group mt-3">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

