@model eShopSolution.ViewModels.System.Users.RegisterRequest
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var culture = CultureInfo.CurrentCulture.Name;
}

@section Scripts {
    <script src="~/js/pages/register.js"></script>
}

<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content">
            <ul>
                <li><a href="index.html" localize-content>Home</a></li>
                <li class="active" localize-content>Register</li>
            </ul>
        </div>
    </div>
</div>
<!-- Li's Breadcrumb Area End Here -->
<!-- Begin Login Content Area -->
<div class="page-section mb-60">
    <div class="container">
        <div class="row">
            <div class="col-sm-12 col-md-12 col-lg-12 col-xs-12">
                <form action="/@culture/Account/Register" method="post">
                    <div class="login-form">
                        <h4 class="login-title" localize-content>Register</h4>
                        <div class="row login-body">
                            <div id="input-firstname" class="col-md-6 col-12 mb-15">
                                <label localize-content>First Name*</label>
                                <input id="firstname" asp-for="FirstName" class="mb-0" type="text" placeholder="Nhập tên">
                                <span></span>
                            </div>
                            <div id="input-lastname" class="col-md-6 col-12 mb-15">
                                <label localize-content>Last Name*</label>
                                <input id="lastname" asp-for="LastName" class="mb-0" type="text" placeholder="Nhập họ">
                                <span></span>
                            </div>
                            <div id="input-email" class="col-md-6 col-12 mb-15">
                                <label localize-content>Email Address*</label>
                                <input id="email" asp-for="Email" class="mb-0" type="email" placeholder="Nhập địa chỉ email">
                                <span></span>
                            </div>
                            <div id="input-phonenumber" class="col-md-6 col-12 mb-15">
                                <label localize-content>Phone Number*</label>
                                <input id="phonenumber" asp-for="PhoneNumber" class="mb-0" type="text" placeholder="Nhập số điện thoại">
                                <span></span>
                            </div>
                            <div id="input-dob" class="col-md-6 col-12 mb-15">
                                <label localize-content>Date Of Bỉthday*</label>
                                <input id="dob" asp-for="Dob" class="mb-0" type="date" placeholder="Date Of Bỉthday">
                                <span></span>
                            </div>
                            <div id="input-username" class="col-md-6 col-12 mb-15">
                                <label localize-content>User Name</label>
                                <input id="username" asp-for="UserName" class="mb-0" type="text" placeholder="Nhập tài khoản">
                                <span></span>
                            </div>
                            <div id="input-password" class="col-md-6 col-12 mb-15">
                                <label localize-content>Password*</label>
                                <input id="password" asp-for="Password" class="mb-0" type="password" placeholder="Nhập mật khẩu">
                                <span></span>
                            </div>
                            <div id="input-confirm-password" class="col-md-6 col-12 mb-15">
                                <label localize-content>Confirm Password*</label>
                                <input id="confirm-password" asp-for="ConfirmPassword" class="mb-0" type="password" placeholder="Nhập lại mật khẩu">
                                <span></span>
                            </div>
                            <div class="col-12">
                                <button id ="btn-register" class="register-button mt-0" localize-content>Register</button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Login Content Area End Here -->
