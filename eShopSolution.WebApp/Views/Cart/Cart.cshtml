@{
    var culture = CultureInfo.CurrentCulture.Name;
    var pathImg = "https://localhost:5001/user-content/";
}
@{
    ViewData["Title"] = "Cart";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts{
    <script src="~/js/pages/cart.js"></script>
}

<div class="Shopping-cart-area pt-60 pb-60">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <form>
                    <div class="table-content table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="li-product-remove" localize-content>remove</th>
                                    <th class="li-product-thumbnail" localize-content>images</th>
                                    <th class="cart-product-name" localize-content>Product</th>
                                    <th class="li-product-price" localize-content>Unit Price</th>
                                    <th class="li-product-quantity" localize-content>Quantity</th>
                                    <th class="li-product-subtotal" localize-content>Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td class="li-product-remove"><a href="#"><i class="fa fa-times"></i></a></td>
                                    <td class="li-product-thumbnail"><a href="#"><img src="" alt="-"></a></td>
                                    <td class="li-product-name"><a href="#">-</a></td>
                                    <td class="li-product-price"><span class="amount">-</span></td>
                                    <td class="quantity">
                                        <label>-</label>
                                        <div class="cart-plus-minus">
                                            <input class="cart-plus-minus-box" value="0" type="text">
                                            <div class="dec qtybutton"><i class="fa fa-angle-down"></i></div>
                                            <div class="inc qtybutton"><i class="fa fa-angle-up"></i></div>
                                        </div>
                                    </td>
                                    <td class="product-subtotal"><span class="amount">-</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-6">
                            <div class="coupon-all">
                                <div class="coupon">
                                    <input id="coupon_code" class="input-text" name="coupon_code" value="" placeholder="Mã giảm giá" type="text">
                                    <input class="button" name="apply_coupon" value="Áp dụng" type="button">
                                </div>
                            </div>
                        </div>
                        <div class="col-6 ml-auto">
                            <div class="cart-page-total">
                                <h2 localize-content>Cart totals</h2>
                                <ul>
                                    <li class="subtotal"><localize>Subtotal</localize><span>0</span></li>
                                    <li class="total-payment"><localize>Total Payment</localize><span>$130.00</span></li>
                                </ul>
                                <a href="/@culture/Cart/Checkout"><localize>Proceed to checkout</localize></a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="confirmRemoveCart" tabindex="-1" role="dialog" aria-labelledby="confirmRemoveCart" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel"><localize>Do you want to remove this item</localize>?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-warning btn-accept" data-dismiss="modal" localize-content>Yes</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal" localize-content>No</button>
            </div>
        </div>
    </div>
</div>