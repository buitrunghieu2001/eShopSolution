@{
    var culture = CultureInfo.CurrentCulture.Name;
    var pathImg = "https://localhost:5001/user-content/";
}
@{
    ViewData["Title"] = "Checkout";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/0.21.1/axios.min.js"></script>
    <script src="~/js/pages/checkout.js"></script>
}

@section Styles {
    <link href="~/css/pages/checkout.css" rel="stylesheet" />
}

<div class="checkout-area pt-60 pb-30">
    <div class="container">
        <div class="row">
            <div class="col-lg-6 col-12">
                <form action="#">
                    <div class="checkbox-form">
                        <h3>Thanh toán</h3>
                        <div class="row">
                            <div class="col-md-12">
                                <div class="checkout-form-list">
                                    <label>Họ và tên <span class="required">*</span></label>
                                    <input placeholder="" type="text" id="ShipName">
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="country-select clearfix">
                                    <label>Tỉnh/Thành phố <span class="required">*</span></label>
                                    <select class="nice-select wide" id="ShipProvince">
                                        <option value="" data-display="Chọn">Chọn</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="country-select clearfix">
                                    <label>Quận/Huyện <span class="required">*</span></label>
                                    <select class="nice-select wide" id="ShipDistrict">
                                        <option value="" data-display="Chọn">Chọn</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="country-select clearfix">
                                    <label>Phường/Xã <span class="required">*</span></label>
                                    <select class="nice-select wide" id="ShipCommune">
                                        <option value="" data-display="Chọn">Chọn</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="checkout-form-list">
                                    <label>Địa chỉ cụ thể <span class="required">*</span></label>
                                    <input placeholder="" type="text" id="ShipAddress">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    <label>Địa chỉ email <span class="required">*</span></label>
                                    <input placeholder="" type="email" id="ShipEmail">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="checkout-form-list">
                                    <label>Số điện thoại  <span class="required">*</span></label>
                                    <input type="text" id="ShipPhoneNumber">
                                </div>
                            </div>
                            <div class="order-notes col-md-12">
                                <div class="checkout-form-list">
                                    <label>Ghi chú</label>
                                    <textarea id="Notes" cols="30" rows="10" placeholder="Ghi chú cho người giao hàng hoặc cửa hàng."></textarea>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6 col-12">
                <div class="your-order">
                    <h3>Đơn hàng của bạn</h3>
                    <div class="your-order-table table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="cart-product-name">Sản phẩm</th>
                                    <th class="cart-product-total">Tổng tiền</th>
                                </tr>
                            </thead>
                            <tbody>

                            </tbody>
                            <tfoot>
                                <tr class="cart-subtotal">
                                    <th>Tổng tiền hàng</th>
                                    <td><span class="amount">£215.00</span></td>
                                </tr>
                                <tr class="delivery-charges">
                                    <th>Phí giao hàng</th>
                                    <td><span class="amount">miễn phí</span></td>
                                </tr>
                                <tr class="order-total">
                                    <th>Tổng thanh toán</th>
                                    <td><strong><span class="amount">£215.00</span></strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <div class="payment-method">
                        <div class="payment-accordion">
                            <div id="accordion">
                                <div class="card">
                                    <div class="card-header" id="#payment-1">
                                        <h5 class="panel-title">
                                            <a class="" data-toggle="collapse" data-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                                Thanh toán khi nhận hàng.
                                            </a>
                                        </h5>
                                    </div>
                                    <div id="collapseOne" class="collapse show" data-parent="#accordion">
                                        <div class="card-body">
                                            <p>Phí thu hộ: ₫0 VNĐ. Ưu đãi về phí vận chuyển (nếu có) áp dụng cả với phí thu hộ.</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="order-button-payment">
                                <input value="Đặt hàng" type="button">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
