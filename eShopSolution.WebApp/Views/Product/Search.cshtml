@using eShopSolution.ViewModels.Common;
@model PagedResult<eShopSolution.ViewModels.Catalog.Products.ProductVM>
@inject LazZiya.ExpressLocalization.ISharedCultureLocalizer _loc;
@{
    ViewData["Title"] = "Search";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var culture = CultureInfo.CurrentCulture.Name;
    var pathImg = "https://localhost:5001/user-content/";
}

@section Scripts {
    <script src="~/js/pages/search.js"></script>
}

<div class="breadcrumb-area">
    <div class="container">
        <div class="breadcrumb-content pl-3">
            <ul>
                <li><a href="index.html" localize-content>Home</a></li>
                <li class="active" localize-content>Search</li>
            </ul>
        </div>
    </div>
</div>
<!-- Li's Breadcrumb Area End Here -->
<!-- Begin Li's Content Wraper Area -->
<div class="content-wraper pt-40 pb-60">
    <div class="container">
        <div class="row">
            
            @if(Model.TotalRecords != 0) {
            <div class="col-lg-12 mb-30">
                <div class="single-banner shop-page-banner">
                    <a href="#">
                        <img src="/images/banner/beb1f136efee46eaa647d8cf1e218cd3_R6+cover+web_rs.jpeg" alt="Li's Static Banner">
                    </a>
                </div>
            </div>
            <div class="col-lg-9 order-1 order-lg-2">
                    <div class="single-banner shop-page-banner mt-20">
                        <span>Kết quả tìm kiếm cho <span class="font-weight-bold">"@ViewBag.KeyWord"</span></span>
                    </div>
                    <!-- Li's Banner Area End Here -->
                    <!-- shop-top-bar start -->
                        <div class="shop-top-bar mt-30">
                            <div class="shop-bar-inner">
                                <div class="product-view-mode">
                                    <!-- shop-item-filter-list start -->
                                    <ul class="nav shop-item-filter-list" role="tablist">
                                    <li role="presentation" class="active"><a aria-selected="true" class="active show" data-toggle="tab" role="tab" aria-controls="grid-view" href="#grid-view"><i class="fa fa-th"></i></a></li>
                                        <li role="presentation"><a data-toggle="tab" role="tab" aria-controls="list-view" href="#list-view"><i class="fa fa-th-list"></i></a></li>
                                    </ul>
                                    <!-- shop-item-filter-list end -->
                                </div>
                                <div class="toolbar-amount">
                                <span>Tìm thấy <span id="total-records">@Model.TotalRecords</span> sản phẩm</span>
                                </div>
                            </div>
                            <!-- product-select-box start -->
                            <div class="product-select-box">
                                <div class="product-short">
                                    <p localize-content>Sort By:</p>
                                    <select class="nice-select" name="order">
                                        <option value="relevance" localize-content>Relevance</option>
                                        <option value="latest" localize-content>Latest</option>
                                        <option value="topsales" localize-content>Top Sales</option>
                                        <option value="price-lh" localize-content>Price (Low > High)</option>
                                        <option value="price-hl" localize-content>Price (High > Low)</option>
                                    </select>
                                </div>
                            </div>
                            <!-- product-select-box end -->
                        </div>
                    <!-- shop-top-bar end -->
                    <!-- shop-products-wrapper start -->
                    <div class="shop-products-wrapper">
                        <div class="tab-content">
                            @if (Model.Items.Count > 0)
                                {
                                <div id="grid-view" class="tab-pane fade active show" role="tabpanel">
                                    <div class="product-area shop-product-area">
                                        <div class="row">
                                            @foreach (var item in Model.Items)
                                            {
                                                var url = $"/{culture}/{_loc["productUrl"]}/{item.Id}";
                                                var img = $"{pathImg}{item.ThumbnailImage}";
                                                <div class="col-lg-4 col-md-4 col-sm-6 mt-40">
                                                    <!-- single-product-wrap start -->
                                                    <div class="single-product-wrap">
                                                        <div class="product-image">
                                                            <a href="@url">
                                                                <img src="@img" alt="Li's Product Image">
                                                            </a>
                                                            <span class="sticker" localize-content>New</span>
                                                        </div>
                                                        <div class="product_desc">
                                                            <div class="product_desc_info">
                                                                <div class="product-review">
                                                                    <h5 class="manufacturer">
                                                                        <a href="product-details.html">@item.Categories[0]</a>
                                                                    </h5>
                                                                    <div class="rating-box">
                                                                        <ul class="rating">
                                                                            @for (var r = 1; r <= 5; r++) {
                                                                                if (r <= item.Rating) {
                                                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                                                } else {
                                                                                    <li class="no-star"><i class="fa fa-star" aria-hidden="true"></i></li>
                                                                                }
                                                                            }
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                                <h4><a class="product_name" href="@url">@item.Name</a></h4>
                                                                <div class="price-box">
                                                                    <span class="old-price">&#8363;@item.OriginalPrice.ToString("N0", new CultureInfo("vi-VN"))</span>
                                                                    <span class="new-price new-price-2">&#8363;@item.Price.ToString("N0", new CultureInfo("vi-VN"))</span>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <!-- single-product-wrap end -->
                                                </div>
                                            }
                                            
                                        </div>
                                    </div>
                                </div>
                                <div id="list-view" class="tab-pane fade product-list-view" role="tabpanel">
                                    <div class="row">
                                        <div class="col">
                                        @if (Model.Items != null && Model.Items.Count > 0)
                                        {
                                            foreach (var item in Model.Items)
                                            {
                                                var url = $"/{culture}/{_loc["productUrl"]}/{item.Id}";
                                                var img = $"{pathImg}{item.ThumbnailImage}";
                                                <div class="row product-layout-list">
                                                    <div class="col-lg-3 col-md-5 ">
                                                        <div class="product-image">
                                                            <a href="@url">
                                                                <img src="@img" alt="@item.Name">
                                                            </a>
                                                            <span class="sticker">New</span>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-5 col-md-7">
                                                        <div class="product_desc">
                                                            <div class="product_desc_info">
                                                                <div class="product-review">
                                                                    <h5 class="manufacturer">
                                                                        <a href="product-details.html">@item.Categories[0]</a>
                                                                    </h5>
                                                                    <div class="rating-box">
                                                                        <ul class="rating">
                                                                            @for (var r = 1; r <= 5; r++)
                                                                            {
                                                                                if (r <= item.Rating)
                                                                                {
                                                                                    <li><i class="fa fa-star" aria-hidden="true"></i></li>
                                                                                }
                                                                                else
                                                                                {
                                                                                    <li class="no-star"><i class="fa fa-star" aria-hidden="true"></i></li>
                                                                                }
                                                                            }
                                                                        </ul>
                                                                    </div>
                                                                </div>
                                                                <h4><a class="product_name" href="@url">@item.Name</a></h4>
                                                                <div class="price-box">
                                                                        <span class="old-price">&#8363;@item.OriginalPrice.ToString("N0", new CultureInfo("vi-VN"))</span>
                                                                        <span class="new-price new-price-2">&#8363;@item.Price.ToString("N0", new CultureInfo("vi-VN"))</span>
                                                                </div>
                                                                <p>@item.Description</p>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="col-lg-4">
                                                        <div class="shop-add-action mb-xs-30">
                                                            <ul class="add-actions-link">
                                                                <li class="add-cart" data-id="@item.Id"><a localize-content>Add to cart</a></li>
                                                                <li class="wishlist"><a href="wishlist.html"><i class="fa fa-heart-o"></i><localize>Add to wishlist</localize></a></li>
                                                                <li><a class="quick-view" data-toggle="modal" data-target="#exampleModalCenter" href="#"><i class="fa fa-eye"></i><localize>Quick view</localize></a></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                        </div>
                                    </div>
                                </div>
                                <div class="paginatoin-area">
                                    <div class="row">
                                        <div class="col-lg-12 col-md-12">
                                            <ul class="pagination-box">
                                                
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    <!-- shop-products-wrapper end -->
                    <div class="search-empty-result-section">
                        @*<img src="~/images/search-empty-result.png" class="search-empty-result-section__icon">
                    <div class="search-empty-result-section__title">Không tìm thấy kết quả nào</div>
                    <div class="search-empty-result-section__hint">Hãy thử sử dụng các từ khóa chung chung hơn</div>*@


                    </div>
                </div>
            <div class="col-lg-3 order-2 order-lg-1">
                
                <div class="sidebar-categores-box">
                    <div class="sidebar-title">
                        <h2>Bộ lọc</h2>
                    </div>
                    <!-- btn-clear-all start -->
                    <button class="btn-clear-all mb-sm-30 mb-xs-30">Clear all</button>
                    <!-- filter-sub-area end -->
                    <!-- filter-sub-area start -->
                        <div class="filter-sub-area pt-sm-10 pt-xs-10">
                            <h5 class="filter-sub-titel" localize-content>Price range</h5>
                            <div class="price-range">
                                <div class="input-group input-group-sm mb-3">
                                    <input type="text" id="price-from" class="form-control" placeholder="&#8363; Từ">
                                    <span class="input-group-text">&#8212;</span>
                                    <input type="text" id="price-to" class="form-control" placeholder="&#8363; Đến">
                                </div>
                                <button type="button" class="btn btn-custom">Áp dụng</button>
                            </div>
                        </div>
                    <!-- filter-sub-area end -->
                    <!-- filter-sub-area start -->
                        <div class="filter-sub-area pt-sm-10 pb-sm-15 pb-xs-15">
                            <h5 class="filter-sub-titel">Đánh giá</h5>
                            <div class="categori-checkbox evaluate">
                                <ul>
                                    <li data-rating="5">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                    </li>
                                    <li data-rating="4">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star-o no-star"></i>
                                        <span>trở lên</span>
                                    </li>
                                    <li data-rating="3">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star-o no-star"></i>
                                        <i class="fa fa-star-o no-star"></i>
                                        <span>trở lên</span>
                                    </li>
                                    <li data-rating="2">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star-o no-star"></i>
                                        <i class="fa fa-star-o no-star"></i>
                                        <i class="fa fa-star-o no-star"></i>
                                        <span>trở lên</span>
                                    </li>
                                    <li data-rating="1">
                                        <i class="fa fa-star" aria-hidden="true"></i>
                                        <i class="fa fa-star-o no-star"></i>
                                        <i class="fa fa-star-o no-star"></i>
                                        <i class="fa fa-star-o no-star"></i>
                                        <i class="fa fa-star-o no-star"></i>
                                        <span>trở lên</span>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    <!-- filter-sub-area end -->
                </div>
            </div>

            }
            

            else {
                <div class="search-empty-result-section">
                    <img src="/images/search-empty-result.png" class="search-empty-result-section__icon">
                    <div class="search-empty-result-section__title">Không tìm thấy kết quả nào</div>
                    <div class="search-empty-result-section__hint">Hãy thử sử dụng các từ khóa chung chung hơn</div>
                </div>
            }
        </div>
    </div>
</div>

